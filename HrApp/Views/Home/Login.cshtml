@model HrApp.Models.User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="Login" method="post">
    <div class="form-group w-50">
        <label asp-for="Email" class="control-lable" >Email</label>
        <input asp-for="Email" class="form-control" required/>
    </div>
    <div class="form-group w-50">
        <label asp-for="Password" class="control-lable">Password</label>
        <input asp-for="Password" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Log in" class="btn btn-primary" />
    </div>
    <div class="form-group">
        <label>@ViewBag.Notification</label>
    </div>
    <div>
        <a asp-action="Index">Back to Home Page</a>
    </div>
    <div>
        <a asp-action="Register">Sign Up</a>
    </div>

</form>



